
{
  "appId": "com.lovable.flypcast",
  "appName": "FlypCast",
  "webDir": "dist",
  "server": {
    "androidScheme": "https",
    "iosScheme": "capacitor",
    "hostname": "localhost",
    "cleartext": true
  },
  "ios": {
    "contentInset": "always",
    "backgroundColor": "#ffffff",
    "scheme": "app",
    "limitsNavigationsToAppBoundDomains": true,
    "allowsLinkPreview": false
  },
  "android": {
    "allowMixedContent": true
  },
  "plugins": {
    "SplashScreen": {
      "launchAutoHide": false,
      "showSpinner": false
    }
  }
}
